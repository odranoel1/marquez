.footer
  text-align center
  .suscribe
    background-color $gray
    padding 50px 0
    input
      width 45%
      @media only screen and (max-width $tablet_size)
        width 100%
        margin-bottom 10px
    button
      @media only screen and (max-width $tablet_size)
        display block
        width 100%
  .contact
    background-color $black
    color $white
    padding 20px 0
    a
      font-size 1.2em
    .responsive
      margin-left 0
      @media only screen and (min-width $tablet_size)
        margin-left 12.5%
    .list-inline i
      margin-right 0
  .privacy
    background-color #181818
    span
      color $white
      margin 0 20px
