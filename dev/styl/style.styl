$desktop_size = 1024px
$tablet_size = 768px
$phone_size = 320px

// Colors
$black = #000
$white = #fff
$yellow = #d8b878
$gray = #ece9dd
$gray-body = #767676

@import "b4.styl"
@import "Header/style.styl"
@import "Content/style.styl"
@import "Footer/style.styl"

body
	background white
	font-size 16px
	font-family 'Roboto-Condensed', sans-serif

h1
	font-size 1.5em
h2
	font-size 1.4em
	color $yellow
	margin-top 0
h3
	font-size 1.3em
h4
	font-size 1.2em
h5
	font-size 1.1em
p
	font-size 1em
ul
	list-style none
i, a
	color $white
	&:hover, &:focus
		color $yellow
		background-color transparent !important

label
	color #7a7676
	font-weight normal
input
	border transparent !important
	background-color transparent !important
	border-bottom 1px solid #908d8d !important
	border-radius 0 !important
	box-shadow inset 0 1px 1px rgba(255, 255, 255, 0) !important

.btn
	font-weight bold
	border-radius 0
	border-color transparent
	&:hover, &:active, &:focus
		background-color rgba($black, 0.8) !important
		border-color transparent
		color $white !important
		text-decoration none
	&-link
		border 1px solid $black
		color $black
	&-default
		background-color $black
		color $white

.flex
	display flex
	@media only screen and (max-width $tablet_size)
		flex-direction column

.w-100
	width 100%
	height auto

.line-title
	border-top 2px solid $yellow
	margin-right 10px
	height 20px
	width 25px
	position relative
	top 12px
	float left

.owl-nav
	position absolute
	top 35%
	width 100%
	.owl-prev, .owl-next
		position absolute
		&:hover
			background-color transparent !important
		i
			color $gray-body
			font-size 1.3em
	.owl-prev
		right 100%
	.owl-next
		left 100%

.sp-buy
	top 70% !important
	left 0
	right 0
	bottom 0
	display flex
	justify-content center
	align-items center
	a
		padding 5px 40px

.sp-buttons
	position absolute
	bottom 0
	.sp-button
		background-color $white
		border 1px solid $black
		padding 5px
	.sp-selected-button
		background-color $black

.notify
	padding 0.8em
	margin-bottom 1em
	border 2px solid #ddd

	&.success
		background #e6efc2
		color #264409
		border-color #c6d880

	&.error, &.alert
		background #fbe3e4
		color #8a1f11
		border-color #fbc2c4

	&.notice, &.warning
		background #fff6bf
		color #514721
		border-color #ffd324

	&.info
		background #d5edf8
		color #205791
		border-color #92cae4

.my-10
	margin 6rem 0
