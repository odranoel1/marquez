header.fix-height
	.Header.main.container-fluid.fixed
		.row.hidden-xs.hidden-sm
			.col-md-4.col-sm-offset-2
				a.d-block(href="/")
					img.img-fluid(src="assets/img/Logo-Horizontal.png", alt="Marqúez Logotipo")
			.col-md-6
				ul.list-inline
					li
						a(href="#", class=section == 'index' ? 'active' : '') HISTORIA
					li
						a(href="#") ESTILO
					li
						a(href="general-product.html") SHOP
					li
						a(href="contact.html") CONTACTO
					li
						a(href="cart.html")
							i.fas.fa-shopping-cart
							span (0)
					li
						a(href="login.html")
							i.far.fa-user
	.mobil.visible-xs.visible-sm.fixed
		.row
			.col-xs-12
				a.d-block(href="/")
					img.img-fluid(src="assets/img/Logo-Horizontal.png", alt="Marqúez Logotipo")
				.items
					a(href="cart.html")
						i.fas.fa-shopping-cart
						span (0)
					a(href="login.html")
						i.far.fa-user
					a(href="#")#drop
						i.fa.fa-bars
				ul#drop-menu
					li
						a(href="#", class=section == 'index' ? 'active' : '') HISTORIA
					li
						a(href="#") ESTILO
					li
						a(href="general-product.html") SHOP
					li
						a(href="contact.html") CONTACTO
